<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="231dp"
            android:background="#74ecf4"
            android:text="PRIMARY COLOR" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:background="#6cc0c8"
            android:text="DARK PRIMARY COLOR" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="#4c3c43"
            android:text="ACCENT COLOR" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="#FFFF"
            android:text="" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="#ea5546"
            android:text="" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:background="#e1c97b"
            android:text="" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>